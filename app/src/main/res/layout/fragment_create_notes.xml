<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="12dp"
        >
        <EditText
            android:id="@+id/eTextTitleCN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etext_shape"
            android:hint="title"
            android:padding="12dp"
            android:maxLines="1"
            android:textColorHint="#ffffff"/>
        <EditText
            android:id="@+id/eTextSubTitleCN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etext_shape"
            android:layout_marginTop="10dp"
            android:hint="subtitle..."
            android:padding="12dp"
            android:maxLines="1"
            android:textColorHint="#ffffff"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/green_shape"/>


            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/yellow_shape"/>
            <ImageView
                android:id="@+id/pRed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/red_shape"/>


        </LinearLayout>
        <EditText
            android:id="@+id/eTextNotesCN"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/etext_shape"
            android:layout_marginTop="10dp"
            android:hint="start writing..."
            android:gravity="start"
            android:padding="12dp"
            android:textColorHint="#ffffff"/>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/donebtnCN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_baseline_done_24"
        android:backgroundTint="@color/redish"
        />


</FrameLayout>